<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_done"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    android:background="#ea812a"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="624dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/pagoda"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="624dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_weight="1"
        android:gravity="center"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            android:textColor="#FFF"
            android:textSize="40dp"
            android:layout_gravity="center"

            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            >

            <EditText
                android:id="@+id/phoneeditText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="20dp"
                android:background="#e48c5d"
                android:inputType="phone"
                android:drawableLeft="@drawable/icon"
                android:hint="  Mobile Number"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:textColorHint="#FFF"
                android:textSize="20dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="624dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteY="8dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#d26c40"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Sign Up"
            android:id="@+id/signup"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#FFF"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/alredyaccntid"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:id="@+id/already"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                />  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textSize="18dp"
            android:layout_toRightOf="@+id/already"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="2dp"
            android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                />


        </RelativeLayout>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>