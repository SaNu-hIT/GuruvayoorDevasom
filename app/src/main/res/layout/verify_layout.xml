<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f28c38"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/imageicon1"
            >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageicon"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/pagoda"
            android:layout_centerInParent="true"

            />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageicon1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/text1"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="#FFF"
            android:text=""
            android:background="#e6a87a"
            />
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/text2"
            android:layout_toRightOf="@+id/text1"
            android:inputType="number"
            android:textColor="#FFF"
            android:maxLength="1"
            android:layout_marginLeft="15dp"
            android:background="#e6a87a"
            />
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/text3"
            android:inputType="number"
            android:textColor="#FFF"
            android:maxLength="1"
            android:layout_toRightOf="@+id/text2"
            android:layout_marginLeft="15dp"
            android:background="#e6a87a"
            />
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/text4"
            android:inputType="number"
            android:textColor="#FFF"
            android:maxLength="1"
            android:layout_toRightOf="@+id/text3"
            android:layout_marginLeft="15dp"
            android:background="#e6a87a"
            />

 <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/text5"
            android:inputType="number"
            android:textColor="#FFF"
            android:maxLength="1"
            android:layout_toRightOf="@+id/text4"
            android:layout_marginLeft="15dp"
            android:background="#e6a87a"
            />

 <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/text6"
            android:inputType="number"
            android:textColor="#FFF"
            android:maxLength="1"
            android:layout_toRightOf="@+id/text5"
            android:layout_marginLeft="15dp"
            android:background="#e6a87a"
            />



        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|top"
            >

            <Button
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="#ec833c"
                android:text="VERIFY"
                android:clickable="true"
                android:id="@+id/verifybtn"
                android:textColor="#FFF"
                android:textSize="18dp"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>